# 顶层EditorConfig文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown文件特殊处理
[*.md]
trim_trailing_whitespace = false

# JSON文件特殊处理
[*.json]
insert_final_newline = false

# 特殊目录/文件的排除
[{dist,node_modules,coverage}/**]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset 