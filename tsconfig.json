{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@prompt/*": ["packages/prompt/src/*"],
      "@agent/*": ["packages/agent/src/*"],
      "@workflow/*": ["packages/workflow/src/*"]
    }
  }
} 