{
  "name": "@dpml/core",
  "version": "0.1.0",
  "description": "DPML language specification and types",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && npx serve coverage",
    "test:coverage:critical": "vitest run --coverage src/processor/**/*.ts",
    "coverage:monitor": "node scripts/coverage-monitor.js",
    "coverage:check": "node scripts/ci-coverage-check.js",
    "clean": "rm -rf dist node_modules"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "dpml",
    "prompt",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "chai": "^5.2.0",
    "serve": "^14.2.2",
    "typescript": "5.8.2",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.16",
    "fast-xml-parser": "^5.2.0",
    "lodash": "^4.17.21",
    "marked": "^15.0.7",
    "strnum": "^2.0.5"
  }
}
